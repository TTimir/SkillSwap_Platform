@model SkillSwap_Platform.Models.ViewModels.AdminControl.RegisterAdminVM

@{
    ViewData["Title"] = "Register New Admin/Moderator";
    Layout = "~/Views/Shared/AdminLayout/_AdminDashboardLayout.cshtml";
}

<div class="col-lg-9">
    <div class="dashboard_title_area">
        <h2>@ViewData["Title"]</h2>
        <p class="text">@ViewData["SubTitle"]</p>
    </div>
</div>
</div>
@if (TempData["SuccessMessage"] != null)
{
    <div class="col-lg-12">
        <div class="ui-content">
            <div class="message-alart-style1">
                <div class="alert alart_style_four alert-dismissible fade show mb20" role="alert">
                    @TempData["SuccessMessage"]
                    <i class="far fa-xmark btn-close" data-bs-dismiss="alert" aria-label="Close"></i>
                </div>
            </div>
        </div>
    </div>
}
@if (ViewBag.ErrorMessage != null)
{
    <div class="col-lg-12">
        <div class="ui-content">
            <div class="message-alart-style1">
                <div class="alert alart_style_three alert-dismissible fade show mb20" role="alert">
                    @ViewBag.ErrorMessage
                    <i class="far fa-xmark btn-close" data-bs-dismiss="alert" aria-label="Close"></i>
                </div>
            </div>
        </div>
    </div>
}
<div class="row">
    <div class="col-xl-12">
        @using (Html.BeginForm("Register", "AdminUsers", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="ps-widget bgc-white bdrs4 p30 mb30 overflow-hidden position-relative">
                <div class="bdrb1 pb15 mb25">
                    <h5 class="list-title">Basic Information</h5>
                </div>
                <div class="col-xl-8">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="mb20">
                                <label asp-for="ProfileImage" class="heading-color ff-heading fw500 mb10">
                                    Profile Picture
                                </label>
                                <input asp-for="ProfileImage" type="file" class="form-control" accept=".jpg,.jpeg,.png" />
                                <span asp-validation-for="ProfileImage" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="mb20">
                                <label asp-for="FirstName" class="heading-color ff-heading fw500 mb10">First Name <span class="text-danger">*</span></label>
                                <input asp-for="FirstName" type="text" class="form-control" placeholder="i will">
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="mb20">
                                <label asp-for="LastName" class="heading-color ff-heading fw500 mb10">Last Name <span class="text-danger">*</span></label>
                                <input asp-for="LastName" type="text" class="form-control" placeholder="i will">
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="mb20">
                                <label asp-for="Email" class="heading-color ff-heading fw500 mb10">Email Address <span class="text-danger">*</span></label>
                                <input asp-for="Email" type="email" class="form-control" placeholder="i will">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="mb20">
                                <label asp-for="ContactNo" class="heading-color ff-heading fw500 mb10">Contact No <span class="text-danger">*</span></label>
                                <input asp-for="ContactNo" type="number" class="form-control" placeholder="i will">
                                <span asp-validation-for="ContactNo" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="mb20">
                                <label asp-for="Password" class="heading-color ff-heading fw500 mb10">Password <span class="text-danger">*</span></label>
                                <input asp-for="Password" type="password" class="form-control" placeholder="i will">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="mb20">
                                <label asp-for="ConfirmPassword" class="heading-color ff-heading fw500 mb10">Confirm Password <span class="text-danger">*</span></label>
                                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="i will">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="mb20">
                                <label asp-for="SelectedRoleId" class="heading-color ff-heading fw500 mb10">Select Role <span class="text-danger">*</span></label>
                                <div class="bootselect-multiselect">
                                    <select asp-for="SelectedRoleId" asp-items="Model.AvailableRoles" class="selectpicker">
                                        <option value="">Select Availability Type</option>
                                    </select>
                                    <span asp-validation-for="SelectedRoleId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="checkbox-style1">
                            <div class="form-check col-sm-6">
                                <label asp-for="IsVerified" class="custom_checkbox">
                                    IsVerified
                                    <input asp-for="IsVerified" type="checkbox">
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                            <div class="form-check col-sm-6">
                                <label asp-for="IsActive" class="custom_checkbox">
                                    IsActive
                                    <input asp-for="IsActive" type="checkbox">
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                            <div class="form-check col-sm-6">
                                <label asp-for="IsHeld" class="custom_checkbox">
                                    IsHeld
                                    <input asp-for="IsHeld" type="checkbox">
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                            <div class="form-check col-sm-6">
                                <label asp-for="IsOnboardingCompleted" class="custom_checkbox">
                                    IsOnboardingCompleted
                                    <input asp-for="IsOnboardingCompleted" type="checkbox">
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                            <span asp-validation-for="IsVerified" class="text-danger"></span>
                        </div>
                        @* <div class="col-md-12">
                            <div class="text-start">
                                <button type="submit" class="ud-btn btn-thm">Save<i class="fal fa-arrow-right-long"></i></button>
                            </div>
                        </div> *@
                        <div class="col-md-12 mt20">
                            <div class="text-start">
                                @* <a class="ud-btn btn-thm" href="page-contact.html">Save & Publish<i class="fal fa-arrow-right-long"></i></a> *@
                                <button type="submit" class="ud-btn btn-thm me-4">Register User<i class="fal fa-arrow-right-long"></i></button>
                                <a asp-action="Index">Cancel</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section DynamicAdminScript {
    <partial name="_ValidationScriptsPartial" />
}