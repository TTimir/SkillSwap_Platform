@{
    Layout = null;
    ViewData["Title"] = "Access Denied";
}
<h1>Access Denied</h1>
<p>You don’t have permission to view this page.</p>

@if (!string.IsNullOrEmpty(ViewBag.ReturnUrl))
{
    <p>
        <a asp-controller="Home"
           asp-action="Login"
           asp-route-returnUrl="@ViewBag.ReturnUrl">
            Click here to login
        </a>
    </p>
}
