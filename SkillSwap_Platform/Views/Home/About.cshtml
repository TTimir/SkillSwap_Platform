                                <h5 class="title mb20"><span class="text-thm">@Model.VerifiedCountDisplay@("+")</span> Verified Freelancer</h5>
                                @foreach (var user in Model.CommunitySpotlight.Skip(1).Take(4))
                                {
                                    <div class="thumb d-flex align-items-center mb20">
                                        <div class="flex-shrink-0">
                                            <img class="wa rounded-circle" src="@user.ProfileImage" alt="@user.Name" style="width:52px; height:52px; object-fit:cover;">
                                        </div>
                                        <div class="flex-grow-1 ml20">
                                            <a href="@Url.Action(
      "PublicProfileByUsername",
      "UserProfile",
      new { username = user.Name }
    )">
                                                @user.Name
                                            </a>
                                            <p class="fz14 mb-0">@user.Designation</p>
                                        </div>
                                    </div>
                                }
                            </div>
                            @{
                                // get the very first spotlighted user
                                var topUser = Model.CommunitySpotlight?.FirstOrDefault();
                            }
                            @if (topUser != null)
                            {
                                <div class="freelancer-style1 about-page-style text-center d-none d-lg-block">
                                    <div class="thumb w90 mb25 mx-auto position-relative rounded-circle"><img class="rounded-circle mx-auto" src="@topUser.ProfileImage" alt="@topUser.Name" style="max-width:100%;"><span class="online"></span></div>
                                    <div class="details">
                                        <a href="@Url.Action(
      "PublicProfileByUsername",
      "UserProfile",
      new { username = topUser.Name }
    )">
                                            @topUser.Name
                                        </a>
                                        <p class="mb-0">@topUser.Designation</p>
                                        <div class="review"><p><i class="fas fa-star fz10 review-color pr10"></i><span class="dark-color">@topUser.Rating.ToString("0.0")</span> (@topUser.ReviewCount reviews)</p></div>
                                        <div class="skill-tags d-flex align-items-center justify-content-center mb20">
                                            @foreach (var skill in (topUser.OfferedSkillAreas ?? Enumerable.Empty<string>()).Take(3))
                                            {
                                                <span class="tag me-1">@skill</span>
                                            }
                                        </div>
                                        <hr class="opacity-100">
                                        <div class="fl-meta d-flex align-items-center justify-content-between">
                                            <a class="meta fw500 text-start">Location<br><span class="fz14 fw400">@topUser.Location</span></a>
                                            <a class="meta fw500 text-start">Recomm.<br><span class="fz14 fw400">@($"{topUser.Recommendation:0}%")</span></a>
                                            <a class="meta fw500 text-start">Exchange Success<br><span class="fz14 fw400">@("%")@topUser.JobSuccess</span></a>
                                        </div>
                                    </div>
                                </div>
                            }
                            <img class="d-block d-lg-none w-100" src="~/template_assets/images/about/verified-freelancer.png" alt="">
                            <div class="imgbox-about-page position-relative d-none d-xl-block">
                                <img class="img-1 spin-right" src="~/template_assets/images/about/element-1.png" alt="">
                                <img class="img-2 bounce-x" src="~/template_assets/images/about/element-2.png" alt="">
                                <img class="img-3 bounce-y" src="~/template_assets/images/about/element-3.png" alt="">
                                <img class="img-4 bounce-y" src="~/template_assets/images/about/element-4.png" alt="">
                                <img class="img-5 spin-right" src="~/template_assets/images/about/element-5.png" alt="">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-5 col-xl-5 offset-xl-1">
                        <div class="about-box-1 pe-4 mt100 mt0-lg mb30-lg wow fadeInLeft" data-wow-delay="300ms">
                            <h2 class="title mb10">Truested By Best <br>Swappers</h2>
                            <p class="text mb25 mb30-md">Be among the pioneers building our Skillswap community. Share your expertise, learn new skills, and grow together from day one.</p>
                            <div class="list-style3 mb40 mb30-md">
                                <ul>
                                    <li><i class="far fa-check text-white bgc-review-color2"></i>Verified Profiles & Real Reviews</li>
                                    <li><i class="far fa-check text-white bgc-review-color2"></i>More Than @Model.AverageExperience.ToString("F1") Years Average Experience</li>
                                    <li><i class="far fa-check text-white bgc-review-color2"></i>@Model.EarlyAdopterCount@("+") Early Adopters Already Swapping</li>
                                </ul>
                            </div>
                            <a href="@Url.ActionLink("PublicProfileList","UserProfileList")" class="ud-btn btn-thm2">Meet Experts<i class="fal fa-arrow-right-long"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

