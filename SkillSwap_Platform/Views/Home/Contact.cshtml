@model SkillSwap_Platform.Models.ViewModels.ContactFormVM

@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="body_content">
    <!-- Breadcumb Sections -->
    <section class="breadcumb-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcumb-style1">
                        <div class="breadcumb-list">
                            <a href="@Url.Action("Index", "Home")">Home</a>
                            <span>@ViewData["Title"]</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="breadcumb-section wow fadeInUp">
        <div class="cta-commmon-v1 cta-banner bgc-thm2 mx-auto maxw1700 pt120 pb120 bdrs16 position-relative overflow-hidden d-flex align-items-center mx20-lg">
            <img class="left-top-img wow zoomIn" src="/template_assets/images/vector-img/left-top.png" alt="">
            <img class="right-bottom-img wow zoomIn" src="/template_assets/images/vector-img/right-bottom.png" alt="">
            <div class="container">
                <div class="row">
                    <div class="col-xl-5">
                        <div class="position-relative wow fadeInUp" data-wow-delay="300ms">
                            <h2 class="text-white">Contact us</h2>
                            <p class="text mb0 text-white">We'd love to talk about how we can help you.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Our Contact Info -->
    <section class="pt-0">
        <div class="container">
            <div class="row wow fadeInUp" data-wow-delay="300ms">
                <div class="col-lg-6">
                    <div class="position-relative mt40">
                        <div class="main-title">
                            <h4 class="form-title mb25">Keep In Touch With Us.</h4>
                            <p class="text">
                                We’re here to help! Shoot us an email at <a href="mailto:skillswap360@gmail.com" style="text-decoration:underline;font-style:italic">skillswap360@gmail.com</a> or contact us anytime and we’ll get right back to you.
                            </p>
                        </div>
                        <div class="iconbox-style1 contact-style d-flex align-items-start mb30">
                            <div class="icon flex-shrink-0"><span class="flaticon-tracking"></span></div>
                            <div class="details">
                                <h5 class="title">Location</h5>
                                <p class="mb-0 text">Based in India.</p>
                            </div>
                        </div>
                        <div class="iconbox-style1 contact-style d-flex align-items-start mb30">
                            <div class="icon flex-shrink-0"><span class="flaticon-mail"></span></div>
                            <div class="details">
                                <h5 class="title">Email</h5>
                                <a href="mailto:skillswap360@gmail.com" class="mb-0 text">skillswap360@gmail.com</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="contact-page-form default-box-shadow1 bdrs8 bdr1 p50 mb30-md bgc-white">
                        <h4 class="form-title mb25">Tell us about yourself</h4>
                        <p class="text mb30">Whether you have questions or you would just like to say hello, We’re all ears.</p>
                        @if (TempData["ContactSuccess"] != null)
                        {
                            <div class="col-lg-12">
                                <div class="ui-content">
                                    <div class="message-alart-style1">
                                        <div class="alert alart_style_four alert-dismissible fade show mb20" role="alert">
                                            @TempData["ContactSuccess"]
                                            <i class="far fa-xmark btn-close" data-bs-dismiss="alert" aria-label="Close"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        <form asp-action="Contact" method="post" enctype="multipart/form-data" class="form-style1">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb20">
                                        <label asp-for="Name" class="heading-color ff-heading fw500 mb10" for="">Name <span class="text-danger">*</span></label>
                                        <input asp-for="Name" type="text" class="form-control" placeholder="John">
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb20">
                                        <label asp-for="Email" class="heading-color ff-heading fw500 mb10" for="">Email <span class="text-danger">*</span></label>
                                        <input asp-for="Email" type="email" class="form-control" placeholder="johndoe58@gmail.com">
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb20">
                                        <label asp-for="Phone" class="heading-color ff-heading fw500 mb10" for="Phone">Phone (optional)</label>
                                        <input asp-for="Phone" id="Phone" name="Phone" type="tel" class="form-control" placeholder="(123) 456-7890">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb20">
                                        <label asp-for="Subject" class="heading-color ff-heading fw500 mb10" for="Subject">Subject <span class="text-danger">*</span></label>
                                        <input asp-for="Subject" id="Subject" name="Subject" type="text" class="form-control" placeholder="What’s this about?" required>
                                        <span asp-validation-for="Subject" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-12 col-xl-12">
                                    <div class="ui-content mb40">
                                        <div class="form-style1">
                                            <label asp-for="Category" class="form-label fw500 fz16 dark-color">I’m reaching out about <span class="text-danger">*</span></label>
                                            <div class="bootselect-multiselect">
                                                <select asp-for="Category" id="Category" name="Category" class="selectpicker">
                                                    <option value="">Select a topic…</option>
                                                    <option>General Inquiry</option>
                                                    <option>Support & Billing</option>
                                                    <option>Swap Issue</option>
                                                    <option>Feature Request</option>
                                                    <option>Bug Report</option>
                                                    <option>Other</option>
                                                </select>
                                                <span asp-validation-for="Category" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="mb20">
                                        <label asp-for="Message" class="heading-color ff-heading fw500 mb10" for="">Messages <span class="text-danger">*</span></label>
                                        <textarea asp-for="Message" cols="30" rows="6" placeholder="How can we help you?"></textarea>
                                        <span asp-validation-for="Message" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-xl-7">
                                    <div class="profile-box d-sm-flex align-items-center mb30">
                                        <div class="profile-content ml20 ml0-xs">
                                            <div class="d-flex align-items-center my-3">
                                                <!-- wrap the file input in your styled link -->
                                                <label class="upload-btn ml10" style="position: relative; cursor: pointer;">
                                                    Upload Attachment (optional)
                                                    <input asp-for="Attachment"
                                                           type="file"
                                                           class="form-control"
                                                           style="position: absolute; top:0; left:0; width:100%; height:100%; opacity:0; cursor:pointer;" />
                                                </label>
                                            </div>
                                            <p class="text mb-0">Max file size is 2 MB. Allowed: .jpg, .png, .pdf only.</p>
                                            <span asp-validation-for="Attachment" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="">
                                        <button type="submit" class="ud-btn btn-thm">Send Messages<i class="fal fa-arrow-right-long"></i></button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Google Map -->
    <section class="p-0 wow fadeInUp" data-wow-delay="300ms">
        <div class="mx-auto maxw1700 bdrs16 position-relative mx20-lg">
            <iframe class="contact-page-map" loading="lazy" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d119066.52982230402!2d72.8222859!3d21.15920015!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3be04e59411d1563%3A0xfe4558290938b042!2sSurat%2C%20Gujarat!5e0!3m2!1sen!2sin!4v1745828863077!5m2!1sen!2sin" title="Surat, Gujarat, India" aria-label="Surat, Gujarat, India"></iframe>
        </div>
    </section>

    <!-- Faq -->
    <section class="pb70">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 m-auto wow fadeInUp" data-wow-delay="300ms">
                    <div class="main-title text-center">
                        <h2 class="title">Still Have Questions?</h2>
                        <p class="paragraph mt10">We’ve answered the questions we hear most often feel free to dive in, or send us a message if you need more help.</p>
                    </div>
                </div>
            </div>
            <div class="row wow fadeInUp" data-wow-delay="300ms">
                <div class="col-lg-8 mx-auto">
                    <div class="ui-content">
                        <div class="accordion-style1 faq-page">
                            @await Component.InvokeAsync("Faq", new { section = "ContactUs" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

