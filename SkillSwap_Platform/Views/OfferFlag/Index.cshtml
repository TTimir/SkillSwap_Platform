@model IEnumerable<SkillSwap_Platform.Models.TblOfferFlag>

@{
    ViewData["Title"] = "Flagged Offers";
    Layout = "~/Views/Shared/AdminLayout/_AdminDashboardLayout.cshtml";
}

@if (TempData["Success"] != null)
{
    <div class="col-lg-12">
        <div class="ui-content">
            <div class="message-alart-style1">
                <div class="alert alart_style_four alert-dismissible fade show mb20" role="alert">
                    @TempData["Success"]
                    <i class="far fa-xmark btn-close" data-bs-dismiss="alert" aria-label="Close"></i>
                </div>
            </div>
        </div>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="col-lg-12">
        <div class="ui-content">
            <div class="message-alart-style1">
                <div class="alert alart_style_three alert-dismissible fade show mb20" role="alert">
                    @TempData["Error"]
                    <i class="far fa-xmark btn-close" data-bs-dismiss="alert" aria-label="Close"></i>
                </div>
            </div>
        </div>
    </div>
}

<div class="col-lg-9">
    <div class="dashboard_title_area">
        <h2>@ViewData["Title"]</h2>
        <p class="text">@ViewData["SubTitle"]</p>
    </div>
</div>
</div>
<div class="row">
    <div class="col-xl-12">
        <div class="ps-widget bgc-white bdrs4 p30 mb30 overflow-hidden position-relative">
            <div class="navtab-style1">
                <nav>
                    <div class="nav nav-tabs mb30" id="nav-tab2" role="tablist">
                        <a href="@Url.ActionLink("Index","OfferFlag")" class="nav-link active fw500 ps-0" id="nav-item1-tab" type="button" aria-selected="true">Flagged Offers</a>
                        <a href="@Url.ActionLink("Manage","OfferFlag")" class="nav-link fw500" id="nav-item2-tab" type="button" aria-selected="false">All Active Users</a>
                    </div>
                </nav>
                <div class="tab-content" id="nav-tabContent">
                    <div class="tab-pane fade show active" id="nav-item1" role="tabpanel" aria-labelledby="nav-item1-tab">
                        <div class="packages_table table-responsive">
                            <table class="table-style3 table at-savesearch">
                                <thead class="t-head">
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Offer</th>
                                        <th scope="col">Flagged By</th>
                                        <th scope="col">Date</th>
                                        <th scope="col">Reason</th>
                                        <th scope="col">Actions</th>
                                    </tr>
                                </thead>
                                <tbody class="t-body">
                                    @{
                                        var srNo = 1;  // initialize counter
                                    }
                                    @foreach (var flag in Model)
                                    {
                                        <tr>
                                            <td class="vam"><span class="fz14 fw400">@(srNo++)</span></td>
                                            <td class="vam">
                                                @if (flag.Offer != null)
                                                {
                                                    <a asp-action="OfferDetails"
                                                       asp-controller="UserOfferDetails"
                                                       asp-route-offerId="@flag.OfferId"
                                                       class="fz15 fw400 text-decoration-none"
                                                       target="_blank">
                                                        @flag.Offer.Title
                                                        <i class="fst-italic">(@flag.Offer.OfferId)</i>
                                                    </a>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">[Deleted]</span>
                                                }
                                            </td>
                                            <td class="vam"><span class="fz14 fw400">@(flag.FlaggedByUser?.UserName ?? $"User #{flag.FlaggedByUserId}")</span></td>
                                            <td class="vam"><span class="fz14 fw400">@flag.FlaggedDate.ToLocalTime().ToString("dd MMM, yyyy HH:mm tt")</span></td>
                                            <td class="vam"><span class="fz14 fw400">@flag.Reason</span></td>
                                            <td>
                                                <div class="d-flex">
                                                    <form asp-action="Dismiss" method="post" class="me-2">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@flag.OfferFlagId" />
                                                        <button type="submit" class="ud-btn btn-light-thm" style="border:0;" data-bs-toggle="tooltip" data-bs-placement="top" title="" data-bs-original-title="Dismiss the flag of this swap offer">
                                                            Dismiss
                                                        </button>
                                                    </form>
                                                    <form asp-action="RemoveOffer" method="post">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@flag.OfferFlagId" />
                                                        <button type="submit" class="ud-btn btn-thm" data-bs-toggle="tooltip" data-bs-placement="top" title="" data-bs-original-title="Remove this swap offer permanently">
                                                            Remove
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>




