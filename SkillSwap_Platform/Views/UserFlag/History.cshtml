@using SkillSwap_Platform.Services.AdminControls
@model PagedResult<SkillSwap_Platform.Services.AdminControls.UserFlag.UserFlagHistoryVM>

@{
    ViewData["Title"] = "Flag History";
    ViewData["SubTitle"] = "Select any user to hold";
    Layout = "~/Views/Shared/AdminLayout/_AdminDashboardLayout.cshtml";
}

@if (TempData["Success"] != null)
{
    <div class="col-lg-12">
        <div class="ui-content">
            <div class="message-alart-style1">
                <div class="alert alart_style_four alert-dismissible fade show mb20" role="alert">
                    @TempData["Success"]
                    <i class="far fa-xmark btn-close" data-bs-dismiss="alert" aria-label="Close"></i>
                </div>
            </div>
        </div>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="col-lg-12">
        <div class="ui-content">
            <div class="message-alart-style1">
                <div class="alert alart_style_three alert-dismissible fade show mb20" role="alert">
                    @TempData["Error"]
                    <i class="far fa-xmark btn-close" data-bs-dismiss="alert" aria-label="Close"></i>
                </div>
            </div>
        </div>
    </div>
}

<div class="col-lg-9">
    <div class="dashboard_title_area">
        <h2>@ViewData["Title"]</h2>
        <p class="text">@ViewData["SubTitle"]</p>
    </div>
</div>
</div>
<div class="row">
    <div class="col-xl-12">
        <div class="ps-widget bgc-white bdrs4 p30 mb30 overflow-hidden position-relative">
            <div class="navtab-style1">
                <nav>
                    <div class="nav nav-tabs mb30" id="nav-tab2" role="tablist">
                        <a class="nav-link active fw500" id="nav-item2-tab" type="button" aria-selected="false">Flag History</a>
                    </div>
                </nav>
                <div class="tab-content" id="nav-tabContent">
                    <div class="tab-pane fade show active" id="nav-item1" role="tabpanel" aria-labelledby="nav-item1-tab">
                        <div class="packages_table table-responsive">
                            <table class="table-style3 table at-savesearch">
                                <thead class="t-head">
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">User</th>
                                        <th scope="col">Flagged By</th>
                                        <th scope="col">Flagged Date</th>
                                        <th scope="col">Action</th>
                                        <th scope="col">Admin</th>
                                        <th scope="col">Action Date</th>
                                        <th scope="col">Reason</th>
                                    </tr>
                                </thead>
                                <tbody class="t-body">
                                    @{
                                        var sr = 1;
                                    }
                                    @foreach (var userVm in Model.Items)
                                    {
                                        var firstRow = true;
                                        foreach (var item in userVm.History)
                                        {
                                            <tr>
                                                @* Column 1: serial number only on the first history row for this user *@
                                                <td>
                                                    @if (firstRow)
                                                    {
                                                        @sr
                                                    }
                                                </td>

                                                @* Column 2: user name only on the first history row *@
                                                <td>
                                                    @if (firstRow)
                                                    {
                                                        @userVm.UserName
                                                    }
                                                </td>

                                                @* Every history row gets its own details *@
                                                <td>@item.FlaggedBy</td>
                                                <td>@item.FlaggedDate.ToString("g")</td>
                                                <td>@(item.ActionTaken ?? "Pending")</td>
                                                <td>@(item.AdminUser ?? "-")</td>
                                                <td>@(item.ActionDate?.ToString("g") ?? "-")</td>
                                                <td>@(item.AdminReason ?? "-")</td>
                                            </tr>

                                            firstRow = false;
                                        }

                                        sr++;
                                    }
                                </tbody>
                            </table>
                            @{
                                var page = Model.Page;
                                var totalPages = Model.TotalPages;
                            }
                            @if (totalPages > 1)
                            {
                                <div class="mbp_pagination text-center mt30">
                                    <ul class="page_navigation">
                                        <!-- Previous -->
                                        <li class="page-item @(page == 1 ? "disabled" : "")">
                                            <a class="page-link"
                                               asp-action="History"
                                               asp-route-page="@(page - 1)">
                                                <span class="fas fa-angle-left"></span>
                                            </a>
                                        </li>

                                        <!-- Page links -->
                                        @for (int p = 1; p <= totalPages; p++)
                                        {
                                            <li class="page-item @(p == page ? "active" : "")">
                                                <a class="page-link"
                                                   asp-action="History"
                                                   asp-route-page="@p">@p</a>
                                            </li>
                                        }

                                        <!-- Next -->
                                        <li class="page-item @(page == totalPages ? "disabled" : "")">
                                            <a class="page-link"
                                               asp-action="History"
                                               asp-route-page="@(page + 1)">
                                                <span class="fas fa-angle-right"></span>
                                            </a>
                                        </li>
                                    </ul>
                                    <p class="mt10 mb-0 pagination_page_count text-center">
                                        Page @(page) of @totalPages
                                    </p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>


