                                        </div>
                                    </div>


                                    <div class="col-md-12">
                                        <label class="form-label">Description</label>
                                        <textarea cols="30" rows="6" name="experience[description][]" placeholder="Describe..."></textarea>
                                    </div>

                                    <div class="col-12 text-end">
                                        <a href="javascript:void(0);" class="ud-btn btn-white2 mb25 remove-entry d-none">
                                            <i class="far fa-minus-circle me-2" style="transform:rotate(0deg)"></i> Remove
                                        </a>
                                    </div>
                                </div>
                            </div>

                            <div class="text-center my-2">
                                <button type="submit" class="ud-btn btn-dark mb25 me-4">
                                    What's Next ? <i class="fal fa-arrow-right-long"></i>
                                </button>
                                @* <button type="submit" name="action" value="Skip" class="custom-btn custom-btn-skip">Skip</button> *@
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }


        <div class="modal fade" id="creditSuccessModal" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content text-center p-4">
                    <h5 class="modal-title mb-3">Way to go!</h5>
                    <p>
                        You've just earned <strong>
                            <img src="/template_assets/images/SSDToken.png" alt="Tokens" width="32" height="32">
                            @(ViewBag.StepReward.ToString("0.##")) TK
                        </strong> 🎉
                    </p>
                    <button type="button" class="ud-btn btn-thm mt-3" data-bs-dismiss="modal">
                        On to the next step!
                    </button>
                </div>
            </div>
        </div>


        <!-- Wrapper End -->
        <!-- Correct order -->
        <script src="/template_assets/js/jquery-3.6.4.min.js"></script>
        <script src="/template_assets/js/popper.min.js"></script> <!-- Popper BEFORE bootstrap -->
        <script src="/template_assets/js/bootstrap.min.js"></script>
        <script src="/template_assets/js/bootstrap-select.min.js"></script>
        <script src="/template_assets/js/jquery.mmenu.all.js"></script>
        <script src="/template_assets/js/ace-responsive-menu.js"></script>
        <script src="/template_assets/js/dashboard-script.js"></script>
        <!-- Custom script for all pages -->
        <script src="/template_assets/js/script.js"></script>
        <!-- JavaScript (jQuery) to Clone Sections -->
        <script>
             $(document).ready(function () {

                // Initialize all selectpickers on page load
                $('.selectpicker').selectpicker();

                // Cloning function
                function cloneEntry(sectionSelector) {
                    var $original = $(sectionSelector).find('.row:first');
                    var $clone = $original.clone(false, false);

                    // Remove bootstrap-select extra markup before cloning
                    $clone.find('.bootstrap-select').replaceWith(function () {
                        return $('select', this);
                    });

                    // Clear inputs
                    $clone.find('input').val('');

                    // Reset and reinitialize selects, removing "multiple"
                    $clone.find('select.selectpicker').each(function () {
                        $(this).removeAttr('multiple');   // Ensures no multiple selection allowed
                        $(this).val('');
                        $(this).selectpicker('destroy').selectpicker();
                    });

                    // Buttons adjustments
                    $clone.find('.add-entry').remove();
                    $clone.find('.remove-entry').removeClass('d-none');

                    // Append clone
                    $(sectionSelector).append($clone);
                }

                $(document).on('click', '.add-entry', function(){
                  var $section = $(this).closest('[id$="-section"]');
                  cloneEntry($section);

                  // initialize the present-toggle on the newly added entry
                  initPresentToggle( $section.find('.experience-entry').last() );
                });

                // Remove button click handler
                $(document).on('click', '.remove-entry', function () {
                    $(this).closest('.row').remove();
                });

                function initPresentToggle($context) {
                  $context.find('.present-checkbox').each(function() {
                    const $chk = $(this);
                    const $end = $chk.closest('.experience-entry').find('.end-date');
                    // on page load:
                    if ($chk.is(':checked')) {
                        $end.prop('disabled', true).prop('required', false).val('');
                     }
                    // on change
                    $chk.off('change').on('change', function() {
                      if (this.checked) {
                        $end.prop('disabled', true).prop('required', false).val('');
                      } else {
                        $end.prop('disabled', false).prop('required', true);
                      }
                    });
                  });
                }

                // initialize on existing rows
                initPresentToggle($(document));
            });
        </script>
        <!-- TempData-driven success popup -->
        @if (TempData["ShowCreditSuccess"] != null)
        {
            <script>
                document.addEventListener('DOMContentLoaded', () => {
                  var modal = new bootstrap.Modal(document.getElementById('creditSuccessModal'));
                  modal.show();

                  // when they click “On to the next step!”, navigate:
                  document.getElementById('creditSuccessModal')
                          .querySelector('button[data-bs-dismiss]')
                          .addEventListener('click', () => {
                    window.location.href = '@Url.Action("SkillPreference")';
                  });
                });
            </script>
            @* clear it so it won’t re-fire on refresh *@
            TempData.Remove("ShowCreditSuccess");
        }
</body>
</html>
