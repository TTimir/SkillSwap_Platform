        <p class="mb-4 text-center">Let potential buyers know about your background.</p>
        @if (ViewBag.StepReward != null)
        {
            var reward = ((decimal)ViewBag.StepReward).ToString("0.##");
            <p class="text-center text-primary">
                🎉 Complete this step now and snag <img src="/template_assets/images/SSDToken.png" alt="Tokens" width="32" height="32"> <strong>@reward TK</strong>!
            </p>
        }

        @using (Html.BeginForm("SkillsExperience", "Onboarding", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-xl-12">
                    <div class="ps-widget bgc-white bdrs4 p30 mb30 overflow-hidden position-relative">

                        @if (ViewBag.ErrorMessage != null)
                        {
                            <div class="col-lg-12">
                                <div class="ui-content">
                                    <div class="message-alart-style1">
                                        <div class="alert alart_style_three alert-dismissible fade show mb20" role="alert">
                                            @ViewBag.ErrorMessage
                                            <i class="far fa-xmark btn-close" data-bs-dismiss="alert" aria-label="Close"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        <div class="col-lg-12">

                            <!-- EDUCATION SECTION -->
                            <div id="education-section">
                                <div class="row gy-4 mb-5 education-entry">
                                    <div class="col-md-12 d-flex justify-content-between align-items-center">
                                        <h4>EDUCATION</h4>
                                        <a href="javascript:void(0);" class="ud-btn btn-light-thm mb25 add-entry">
                                            <i class="far fa-x me-2"></i> Add Education
                                        </a>
                                    </div>

                                    <div class="col-lg-6">
                                        <div class="ui-content">
                                            <div class="form-style1">
                                                <label class="form-label fw500 fz16 dark-color">Degree</label>
                                                <div class="bootselect-multiselect">
                                                    <select name="education[degree][]" class="selectpicker">
                                                        <option value="">Select</option>
                                                        <option value="School's">School's Degree</option>
                                                        <option value="Bachelor's">Bachelor's Degree</option>
                                                        <option value="Master's">Master's Degree</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Domain <span class="text-danger">*</span></label>
                                        <input type="text" class="form-control" name="education[degree_name][]" placeholder="e.g., Bachelor of Computer Applications" required />
                                    </div>

                                    <div class="col-md-4">
                                        <label class="form-label">University Name <span class="text-danger">*</span></label>
                                        <input type="text" name="education[institution_name][]" class="form-control" placeholder="Institution Name" required />
                                    </div>

                                    <div class="col-md-4">
                                        <label class="form-label">Start Date <span class="text-danger">*</span></label>
                                        <input type="date" name="education[start_date][]" class="form-control" required />
                                    </div>

                                    <div class="col-md-4">
                                        <label class="form-label">End Date</label>
                                        <input type="date" name="education[end_date][]" class="form-control" />
                                        <small class="form-text text-muted">
                                            If you’re currently pursuing this, feel free to leave this empty.
                                        </small>
                                    </div>

                                    <div class="col-md-12">
                                        <label class="form-label">Description</label>
                                        <textarea cols="30" rows="6" name="education[description][]" placeholder="Describe..."></textarea>
                                    </div>

                                    <div class="col-12 text-end">
                                        <a href="javascript:void(0);" class="ud-btn btn-white2 mb25 remove-entry d-none">
                                            <i class="far fa-minus-circle me-2" style="transform:rotate(0deg)"></i> Remove
                                        </a>
                                    </div>
                                </div>
                            </div>

                            <!-- LANGUAGE SECTION -->
                            <div id="language-section">
                                <div class="row gy-4 mb-5 language-entry">
                                    <div class="col-md-12 d-flex justify-content-between align-items-center">
                                        <h4>LANGUAGE</h4>
                                        <a href="javascript:void(0);" class="ud-btn btn-light-thm mb25 add-entry">
                                            <i class="far fa-x me-2"></i> Add Language
                                        </a>
                                    </div>

                                    <!-- Language Name -->
                                    <div class="col-md-6">
                                        <label class="form-label">Language <span class="text-danger">*</span></label>
                                        <input type="text" name="language[name][]" class="form-control" placeholder="Language" required />
                                    </div>

                                    <div class="col-sm-6">
                                        <div class="mb20">
                                            <div class="form-style1">
                                                <label class="heading-color ff-heading fw500 mb10">Proficiency <span class="text-danger">*</span></label>
                                                <div class="bootselect-multiselect">
                                                    <select name="language[level][]" class="selectpicker" required>
                                                        <option value="">Choose Proficiency</option>
                                                        <option value="Basic">Basic</option>
                                                        <option value="Intermediate">Intermediate</option>
                                                        <option value="Proficient">Proficient</option>
                                                        <option value="Native">Native</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-12 text-end">
                                        <a href="javascript:void(0);" class="ud-btn btn-white2 mb25 remove-entry d-none">
                                            <i class="far fa-minus-circle me-2" style="transform:rotate(0deg)"></i> Remove
