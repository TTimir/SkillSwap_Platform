@model SkillSwap_Platform.Models.ViewModels.OnBoardVM.AdditionalInfoVM

@{
    Layout = null;
    ViewData["Title"] = "Step 6: Additional Information";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - SkillSwap</title>
    <!-- css file -->
    <link rel="stylesheet" href="/template_assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="/template_assets/css/ace-responsive-menu.css">
    <link rel="stylesheet" href="/template_assets/css/fontawesome.css">
    <link rel="stylesheet" href="/template_assets/css/flaticon.css">
    <link rel="stylesheet" href="/template_assets/css/bootstrap-select.min.css">
    <link rel="stylesheet" href="/template_assets/css/animate.css">
    <link rel="stylesheet" href="/template_assets/css/slider.css">
    <link rel="stylesheet" href="/template_assets/css/jquery-ui.min.css">
    <link rel="stylesheet" href="/template_assets/css/magnific-popup.css">
    <link rel="stylesheet" href="/template_assets/css/style.css">
    <link rel="stylesheet" href="/template_assets/css/ud-custom-spacing.css">
    <link rel="stylesheet" href="/template_assets/css/dashbord_navitaion.css">
    <link rel="stylesheet" href="/template_assets/css/onboardstyle.css">
    <!-- Responsive stylesheet -->
    <link rel="stylesheet" href="/template_assets/css/responsive.css">
    <!-- Favicon -->
    <link href="images/favicon.ico" sizes="128x128" rel="shortcut icon" type="image/x-icon" />
    <!-- Apple Touch Icon -->
    <link href="/template_assets/images/apple-touch-icon-60x60.png" sizes="60x60" rel="apple-touch-icon">
    <link href="/template_assets/images/apple-touch-icon-72x72.png" sizes="72x72" rel="apple-touch-icon">
    <link href="/template_assets/images/apple-touch-icon-114x114.png" sizes="114x114" rel="apple-touch-icon">
    <link href="/template_assets/images/apple-touch-icon-180x180.png" sizes="180x180" rel="apple-touch-icon">

    <style>
        .header-logo.logo1 {
            display: inline-flex;
            align-items: center; /* vertical centering */
            justify-content: center; /* horizontal centering */
            color: #222;
            text-decoration: none;
            gap: 6px; /* small space between img and text */
        }

            .header-logo.logo1 img {
                border-radius: 14px;
                width: 40px;
                height: auto;
            }

            .header-logo.logo1 .logo-text {
                font-family: monospace;
                font-size: 22px;
                letter-spacing: 1;
                font-weight: 600;
                white-space: nowrap;
            }
    </style>
</head>
<body>

    <!-- Minimal Navigation Bar -->
    <header class="header-nav">
        <div class="container-custom">
            <div class="logo">
                <a class="header-logo logo1" href="/">
                    <img src="/template_assets/images/header-logo-dark.png" alt="Header Logo">
                    <span class="logo-text">
                        SkillSwap<span style="color:#5BBB7B">.</span>
                    </span>
                </a>
            </div>
            <nav>
                <ul>
                    <li><a href="#">Home</a></li>
                    <li><a class="active" href="#">Onboarding</a></li>
                    <li><a href="#">Contact</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <!-- Main Onboarding Content -->
    <div class="container-custom">
        <div class="onboarding-title">Onboarding</div>

        <!-- Progress Timeline -->
        <div class="progress-timeline">
            <div class="progress-steps">
                <div class="progress-step completed">
                    <span class="step-number">1</span>
                    <div class="step-label">Account Type</div>
                </div>
                <div class="progress-step completed">
                    <span class="step-number">2</span>
                    <div class="step-label">Personal Info</div>
                </div>
                <div class="progress-step completed">
                    <span class="step-number">3</span>
                    <div class="step-label">Skills & Experience</div>
                </div>
                <div class="progress-step completed">
                    <span class="step-number">4</span>
                    <div class="step-label">Preference</div>
                </div>
                <div class="progress-step completed">
                    <span class="step-number">5</span>
                    <div class="step-label">Certificate</div>
                </div>
                <div class="progress-step active">
                    <span class="step-number">6</span>
                    <div class="step-label">Additional Info</div>
                </div>
            </div>
        </div>

        <h2 class="mb-3 text-center">@ViewData["Title"]</h2>
        <p class="mb-4 text-center">Don’t worry, this can be changed later.</p>
        @if (ViewBag.StepReward != null)
        {
            var reward = ((decimal)ViewBag.StepReward).ToString("0.##");
            <p class="text-center text-primary">
                🎉 Complete this step now and snag <img src="/template_assets/images/SSDToken.png" alt="Tokens" width="32" height="32"> <strong>@reward TK</strong>!
            </p>
        }

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">
                @ViewBag.ErrorMessage
            </div>
        }

        @using (Html.BeginForm("AdditionalInfo", "Onboarding", FormMethod.Post, new { enctype = "multipart/form-data", id = "additionalInfoForm" }))
        {
            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-xl-12">
                    <div class="ps-widget bgc-white bdrs4 p30 mb30 overflow-hidden position-relative">

                        <div class="col-lg-12">

                            <!-- SOCIAL MEDIA SECTION -->
                            <div id="social-section">
                                <div class="row gy-4 mb-5 social-entry">
                                    <div class="col-md-12 d-flex justify-content-between align-items-center">
                                        <h4>Social Media</h4>
                                    </div>

                                    <div class="col-md-4">
                                        <label class="form-label">Facebook</label>
                                        <input type="text" id="facebook" name="facebook" class="form-control" placeholder="https://facebook.com/yourprofile" />
                                    </div>

                                    <div class="col-md-4">
                                        <label class="form-label">Instagram</label>
                                        <input type="text" id="instagram" name="instagram" class="form-control" placeholder="https://www.instagram.com/yourusername"  />
                                    </div>

                                    <div class="col-md-4">
                                        <label class="form-label">LinkedIn</label>
                                        <input type="text" id="linkedin" name="linkedin" class="form-control" placeholder="https://linkedin.com/in/yourprofile" />
                                    </div>

                                    <div class="col-md-3">
                                        <label class="form-label">Behance</label>
                                        <input type="text" id="behance" name="behance" class="form-control" placeholder="https://www.behance.net/yourusername" />
                                    </div>

                                    <div class="col-md-3">
                                        <label class="form-label">Pinterest</label>
                                        <input type="text" id="pinterest" name="pinterest" class="form-control" placeholder="https://www.pinterest.com/yourprofile" />
                                    </div>

                                    <div class="col-md-3">
                                        <label class="form-label">Twitter (X)</label>
                                        <input type="text" id="twitter" name="twitter" class="form-control" placeholder="https://twitter.com/yourhandle" />
                                    </div>

                                    <div class="col-md-3">
                                        <label class="form-label">GitHub</label>
                                        <input type="text" id="github" name="github" class="form-control" placeholder="https://github.com/yourprofile" />
                                    </div>

                                    <!-- Error Message -->
                                    <div id="socialError" class="text-danger mt-2" style="display: none;">
                                        Please provide at least one social media link.
                                    </div>
                                </div>
                            </div>

                            <!-- PERSONAL WEBSITE -->
                            <h4>Personal Website  (Optional, must be a valid URL)</h4>
                            <div class="input-block mb-5">
                                <label class="form-label">Website URL</label>
                                <input type="text" id="personalWebsite" name="personalWebsite" class="form-control" placeholder="Your Website" />
                                <small id="websiteError" class="text-danger mt-1" style="display: none;">Please enter a valid URL (e.g., https://example.com).</small>
                            </div>

                            <!-- KYC DOCUMENT UPLOAD -->
                            <h4>KYC Upload</h4>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="ui-content">
                                        <div class="form-style1">
                                            <label class="form-label fw500 fz16 dark-color">Document Type</label>
                                            <div class="bootselect-multiselect">
                                                <select name="documentType" class="selectpicker">
                                                    <option value="">Select</option>
                                                    <option value="Passport">Passport</option>
                                                    <option value="DriverLicense">Driver License</option>
                                                    <option value="IDCard">ID Card</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label">Document Number</label>
                                    <input type="text" name="documentNumber" class="form-control" placeholder="Document Number" />
                                </div>

                                <div class="col-xl-8 mt-1">
                                    <div class="profile-box d-sm-flex align-items-center mb30">
                                        <div class="profile-content ml0-xs">
                                            <label class="form-label">Upload Document</label>
                                            <div class="d-flex align-items-center mb-2">
                                                <label for="certificateInput" class="upload-btn certificate-label" style="cursor: pointer;">
                                                    Upload Document (PDF)
                                                </label>
                                                <input type="file" name="kycFile" class="certificateInput" id="certificateInput" accept=".pdf" style="display: none;">
                                            </div>
                                            <p class="text mb-0">Max file size is 5MB. Allowed file type: PDF (.pdf)</p>
                                            <small id="fileError" class="text-danger mt-1" style="display: none;"></small>
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <!-- Navigation Buttons -->
                            <div class="text-center my-2">
                                <button type="submit" class="ud-btn btn-dark mb25 me-4">
                                    Completed ? <i class="fal fa-arrow-right-long"></i>
                                </button>
                                @* <button type="submit" name="action" value="Skip" class="custom-btn custom-btn-skip">Skip</button> *@
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>

    <div class="modal fade" id="creditSuccessModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content text-center p-4">
                <h5 class="modal-title mb-3">Way to go!</h5>
                <p>
                    You've just earned&nbsp;
                    <strong>
                        <img src="/template_assets/images/SSDToken.png" width="32" height="32" alt="Token">
                        @TempData["TotalEarned"] TK
                    </strong>
                    🎉 for completing your onboarding steps.
                </p>
                <small class="mb-4 text-muted">
                    The tokens are now in your account—go check your dashboard to start swapping!
                </small>
                <button id="toHomeBtn" type="button" class="ud-btn btn-thm mt-3" data-bs-dismiss="modal">
                    Take me home!
                </button>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <!-- Correct order -->
    <script src="/template_assets/js/jquery-3.6.4.min.js"></script>
    <script src="/template_assets/js/popper.min.js"></script> <!-- Popper BEFORE bootstrap -->
    <script src="/template_assets/js/bootstrap.min.js"></script>
    <script src="/template_assets/js/bootstrap-select.min.js"></script>
    <script src="/template_assets/js/jquery.mmenu.all.js"></script>
    <script src="/template_assets/js/ace-responsive-menu.js"></script>
    <script src="/template_assets/js/dashboard-script.js"></script>
    <!-- Custom script for all pages -->
    <script src="/template_assets/js/script.js"></script>
    <script>
        document.getElementById("additionalInfoForm").addEventListener("submit", function (e) {
            // VALIDATE PERSONAL WEBSITE URL
            var websiteInput = document.getElementById("personalWebsite");
            var websiteError = document.getElementById("websiteError");
            var urlPattern = /^(https?:\/\/)?([a-zA-Z0-9.-]+)\.[a-zA-Z]{2,}(\S*)$/;

            if (websiteInput.value.trim() !== "" && !urlPattern.test(websiteInput.value.trim())) {
                websiteError.style.display = "block";
                e.preventDefault();
            } else {
                websiteError.style.display = "none";
            }

            // VALIDATE FILE UPLOAD (ONLY PDF ALLOWED)
            var fileInput = document.getElementById("certificateInput");
            var fileError = document.getElementById("fileError");

            if (fileInput.files.length > 0) {
                var file = fileInput.files[0];
                var fileType = file.type;
                var fileSize = file.size / 1024 / 1024; // Convert bytes to MB

                if (fileType !== "application/pdf") {
                    fileError.textContent = "Only PDF files are allowed!";
                    fileError.style.display = "block";
                    fileInput.value = ""; // Clear file input
                    e.preventDefault();
                } else if (fileSize > 5) {
                    fileError.textContent = "File size exceeds 5MB!";
                    fileError.style.display = "block";
                    fileInput.value = ""; // Clear file input
                    e.preventDefault();
                } else {
                    fileError.style.display = "none"; // Clear error if valid
                }
            }
        });

        // FILE NAME DISPLAY & VALIDATION (ONLY PDF ALLOWED)
        document.getElementById("certificateInput").addEventListener("change", function () {
            var fileLabel = document.querySelector(".certificate-label");
            var fileError = document.getElementById("fileError");

            if (this.files.length > 0) {
                var file = this.files[0];
                var fileType = file.type;
                var fileSize = file.size / 1024 / 1024; // Convert bytes to MB

                if (fileType !== "application/pdf") {
                    fileError.textContent = "Only PDF files are allowed!";
                    fileError.style.display = "block";
                    fileLabel.textContent = "Upload Document (PDF)"; // Reset label
                    this.value = ""; // Clear invalid file
                } else if (fileSize > 5) {
                    fileError.textContent = "File size exceeds 5MB!";
                    fileError.style.display = "block";
                    fileLabel.textContent = "Upload Document (PDF)"; // Reset label
                    this.value = ""; // Clear invalid file
                } else {
                    fileError.style.display = "none"; // Hide error
                    fileLabel.textContent = file.name; // Display file name
                }
            } else {
                fileLabel.textContent = "Upload Document (PDF)"; // Reset label if no file selected
                fileError.style.display = "none"; // Hide error message
            }
        });
    </script>
    <!-- TempData-driven success popup -->
    @if (TempData["ShowCreditSuccess"] != null)
    {
        <script>
            document.addEventListener('DOMContentLoaded', () => {
              var modal = new bootstrap.Modal(document.getElementById('creditSuccessModal'));
              modal.show();

              // 1) If they click the button, go home
              document.getElementById('toHomeBtn')
                      .addEventListener('click', () => {
                window.location.href = '@Url.Action("Login", "Home")';
              });

              // 2) Or after 5 seconds, auto-redirect
              setTimeout(() => {
                window.location.href = '@Url.Action("Login", "Home")';
              }, 5000);
            });
        </script>
        @* clear so it doesn’t re-fire if they refresh *@
        TempData.Remove("ShowCreditSuccess");
        TempData.Remove("TotalEarned");
    }
</body>
</html>
