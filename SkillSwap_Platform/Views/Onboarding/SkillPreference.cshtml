    <!-- JavaScript (jQuery) to Clone Sections -->
    <script>
        $(function() {
          // 1. Initialize any existing selectpickers
          $('select.selectpicker').selectpicker();

          // 2. Clone one Skill-Set row
          function cloneEntry() {
            const $template = $('#skillset-section .education-entry').first();
            const $clone    = $template.clone();

            // a) Strip out existing plugin markup
            $clone.find('.bootstrap-select').each(function() {
              $(this).replaceWith($(this).find('select'));
            });

            // b) Clear all text inputs
            $clone.find('input[type="text"]').val('');
            $clone.find('.custom-category-container')
                  .hide()
                  .find('input')
                  .prop('required', false)
                  .val('');

            // c) Clear and re-init selects
            $clone.find('select').each(function() {
              $(this).val('');
              $(this).selectpicker('destroy').selectpicker();
            });

            // d) Swap Add/Remove buttons
            $clone.find('.add-entry').remove();
            $clone.find('.remove-entry').removeClass('d-none');

            // e) Append it
            $('#skillset-section').append($clone);
          }

          // 3. Add new row
          $(document).on('click', '#skillset-section .add-entry', function(e) {
            e.preventDefault();
            cloneEntry();
          });

          // 4. Remove a row
          $(document).on('click', '.remove-entry', function(e) {
            e.preventDefault();
            $(this).closest('.row').remove();
            syncOfferedSkills();
          });

          // 5. Show/hide custom-category on change
          $(document).on('changed.bs.select change', 'select.skill-category', function() {
            const $row = $(this).closest('.row');
            if ($(this).val() === 'Other') {
              $row.find('.custom-category-container')
                  .show()
                  .find('input')
                  .prop('required', true);
            } else {
              $row.find('.custom-category-container')
                  .hide()
                  .find('input')
                  .prop('required', false)
                  .val('');
            }
          });

          // 6. ----- Offered/Willing Skills Logic -----

          // Utility: update hidden input from badges
          function updateHiddenSkills($hidden, $container) {
            const list = $container.find('.skill-badge')
              .map((i, el) => $(el).text().replace('×','').trim())
              .get();
            $hidden.val(list.join(','));
          }

          // Ensure offered badges still exist in Skill Set
          function syncOfferedSkills() {
            const available = $("#skillset-section input[name='skill[name][]']")
              .map((i, inp) => $(inp).val().toLowerCase().trim())
              .get();

            $('#offeredSkillsContainer .skill-badge').each(function() {
              const text = $(this).text().replace('×','').trim().toLowerCase();
              if (!available.includes(text)) $(this).remove();
            });

            updateHiddenSkills($('#offeredSkillsHidden'), $('#offeredSkillsContainer'));
          }

          // Core: add a badge
          function addSkillBadge($input, $container, $hidden, $error, validateAgainstSkillSet) {
            const val = $input.val().trim();
            if (!val) return;

            // optional: ensure val exists in Skill Set
            if (validateAgainstSkillSet) {
              const avail = $("#skillset-section input[name='skill[name][]']")
                .map((i, inp) => $(inp).val().toLowerCase().trim())
                .get();
              if (!avail.includes(val.toLowerCase())) {
                return $error.text(`"${$input.val()}" not in your Skill Set`);
              }
            }

            // duplicates?
            if ($container.find('.skill-badge').filter((i, b) =>
                  $(b).text().replace('×','').trim().toLowerCase() === val.toLowerCase()
                ).length) {
              $error.text('Already added.');
              $input.val('');
              return;
            }
            // max 5
            if ($container.find('.skill-badge').length >= 5) {
              $error.text('Max 5 allowed.');
              $input.val('');
              return;
            }

            // append badge
            $container.append(`
              <span class="skill-badge">
                ${val}
                <i class="far fa-times remove-skill ms-2"></i>
              </span>
            `);

            updateHiddenSkills($hidden, $container);
            $input.val('');
            $error.text('');
          }

          // Bind Enter+Blur for both fields
          [
            { inp: '#offeredSkillInput', cont: '#offeredSkillsContainer', hid: '#offeredSkillsHidden', err: '#offeredSkillError', validate: true },
            { inp: '#willingSkillInput', cont: '#willingSkillsContainer', hid: '#willingSkillsHidden', err: '#willingSkillError', validate: false }
          ].forEach(cfg => {
            // Enter key
            $(cfg.inp).on('keypress', e => {
              if (e.which === 13) {
                e.preventDefault();
                addSkillBadge($(cfg.inp), $(cfg.cont), $(cfg.hid), $(cfg.err), cfg.validate);
              }
            });
            // Blur
            $(cfg.inp).on('blur', () => {
              if ($(cfg.inp).val().trim()) {
                addSkillBadge($(cfg.inp), $(cfg.cont), $(cfg.hid), $(cfg.err), cfg.validate);
              }
            });
          });

          // Remove a badge
          $(document).on('click', '.remove-skill', function() {
            const $b = $(this).parent();
            const isOff = $b.parent().is('#offeredSkillsContainer');
            $b.remove();
            if (isOff) syncOfferedSkills();
            updateHiddenSkills(
              isOff ? $('#offeredSkillsHidden') : $('#willingSkillsHidden'),
              isOff ? $('#offeredSkillsContainer') : $('#willingSkillsContainer')
            );
          });

          // Prevent empty form submission
          $('form').on('submit', e => {
            let ok = true;
            if (!$('#offeredSkillsHidden').val().trim()) {
              $('#offeredSkillError').text('Add at least one Offered skill.');
              ok = false;
            }
            if (!$('#willingSkillsHidden').val().trim()) {
              $('#willingSkillError').text('Add at least one Willing skill.');
              ok = false;
            }
            if (!ok) e.preventDefault();
          });

        });
    </script>
