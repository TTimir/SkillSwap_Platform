    <script>
        $(document).ready(function () {
            // Update the hidden input with a comma‑separated list of current skills.
            function updateHiddenInput(hiddenInputSelector, containerSelector) {
                var skills = [];
                $(containerSelector).find('.skill-badge').each(function () {
                    var text = $(this).text().trim();
                    skills.push(text);
                });
                $(hiddenInputSelector).val(skills.join(", "));
            }

            // Add skills from the input field into the container, but only if the total count is 5 or less.
            function addSkills(inputSelector, containerSelector, hiddenInputSelector, errorSelector) {
                var inputVal = $(inputSelector).val().trim();
                var errorField = $(errorSelector);
                if (inputVal === "") {
                    errorField.text("Please enter at least one skill.");
                    return;
                }
                var newSkills = inputVal.split(',')
                    .map(function (s) { return s.trim(); })
                    .filter(function (s) { return s !== ""; });
                var container = $(containerSelector);
                var currentCount = container.find('.skill-badge').length;
                // If adding these new skills would exceed 5, show error and do not update badges.
                if (currentCount + newSkills.length > 5) {
                    errorField.text("You can only add up to 5 skills.");
                    return;
                }

                newSkills.forEach(function (skill) {
                    // Check for duplicates.
                    var duplicate = false;
                    container.find('.skill-badge').each(function () {
                        if ($(this).text().trim().toLowerCase() === skill.toLowerCase()) {
                            duplicate = true;
                        }
                    });
                    if (!duplicate) {
                        container.append('<span class="skill-badge">' + skill + '</span>');
                    }
                });
                $(inputSelector).val('');
                errorField.text('');
                updateHiddenInput(hiddenInputSelector, containerSelector);
            }

            // Bind add buttons.
            $("#addOfferedSkillButton").click(function () {
                addSkills("#offeredSkillInput", "#offeredSkillsContainer", "#offeredSkillsHidden", "#offeredSkillError");
            });
            $("#addWillingSkillButton").click(function () {
                addSkills("#willingSkillInput", "#willingSkillsContainer", "#willingSkillsHidden", "#willingSkillError");
            });
        });
    </script>
