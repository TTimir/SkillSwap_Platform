@model SkillSwap_Platform.Models.ViewModels.PaymentGatway.BillingHistoryVM

@{
    ViewData["Title"] = "Your Billings";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@if (TempData["Success"] != null)
{
    <div class="col-lg-12">
        <div class="ui-content">
            <div class="message-alart-style1">
                <div class="alert alart_style_four alert-dismissible fade show mb20" role="alert">
                    @TempData["Success"]
                    <i class="far fa-xmark btn-close" data-bs-dismiss="alert" aria-label="Close"></i>
                </div>
            </div>
        </div>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="col-lg-12">
        <div class="ui-content">
            <div class="message-alart-style1">
                <div class="alert alart_style_three alert-dismissible fade show mb20" role="alert">
                    @TempData["Error"]
                    <i class="far fa-xmark btn-close" data-bs-dismiss="alert" aria-label="Close"></i>
                </div>
            </div>
        </div>
    </div>
}

<div class="col-lg-9">
    <div class="dashboard_title_area">
        <h2>@ViewData["Title"]</h2>
        <p class="text">@ViewData["SubTitle"]</p>
    </div>
</div>
</div>
<div class="row">
    <div class="col-xl-12">
        <div class="ps-widget bgc-white bdrs4 p30 mb30 overflow-hidden position-relative">
            <div class="navtab-style1">
                <nav>
                    <div class="nav nav-tabs mb30" id="nav-tab2" role="tablist">
                        <a class="nav-link fw500 ps-0" id="nav-item1-tab" type="button" aria-selected="true">Billing History</a>
                    </div>
                </nav>
                <div class="tab-content" id="nav-tabContent">
                    <div class="tab-pane fade show active" id="nav-item1" role="tabpanel" aria-labelledby="nav-item1-tab">
                        <div class="packages_table table-responsive">
                            <table class="table-style3 table at-savesearch">
                                <thead class="t-head">
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Period</th>
                                        <th scope="col">Plan</th>
                                        <th scope="col">Cycle</th>
                                        <th scope="col">Auto-renew</th>
                                        <th scope="col">Cancelled?</th>
                                    </tr>
                                </thead>
                                <tbody class="t-body">
                                    @{
                                        // calculate the serial start index for this page
                                        var serial = (Model.Page - 1) * Model.PageSize + 1;
                                    }
                                    @foreach (var item in Model.BillingHistory)
                                    {
                                        <tr>
                                            <td class="vam">@serial</td>
                                            <td class="vam">
                                                @item.StartDate.ToLocalTime().ToString("yyyy-MM-dd")
                                                &ndash; @item.EndDate.ToLocalTime().ToString("yyyy-MM-dd")
                                            </td>
                                            <td class="vam">@item.PlanName</td>
                                            <td class="text-capitalize">@item.BillingCycle</td>
                                            <td class="vam">
                                                @if (item.IsAutoRenew)
                                                {
                                                    <span class="pending-style style2">Yes</span>
                                                }
                                                else
                                                {
                                                    <span class="pending-style style3">No</span>
                                                }
                                            </td>
                                            <td class="vam">
                                                @if (item.CancelReason != null)
                                                {
                                                    <small title="@item.CancelReason">
                                                        cancelled @item.CancelledAt?.ToLocalTime().ToString("yyyy-MM-dd")
                                                    </small>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">N/A</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            @{
                                var page = Model.Page;
                                var totalPages = Model.TotalPages;
                            }
                            @if (totalPages > 1)
                            {
                                <div class="mbp_pagination text-center mt30">
                                    <ul class="page_navigation">
                                        <!-- Previous -->
                                        <li class="page-item @(page == 1 ? "disabled" : "")">
                                            <a class="page-link"
                                               asp-action="BillingHistory"
                                               asp-route-page="@(page - 1)">
                                                <span class="fas fa-angle-left"></span>
                                            </a>
                                        </li>

                                        <!-- Page links -->
                                        @for (int p = 1; p <= totalPages; p++)
                                        {
                                            <li class="page-item @(p == page ? "active" : "")">
                                                <a class="page-link"
                                                   asp-action="BillingHistory"
                                                   asp-route-page="@p">@p</a>
                                            </li>
                                        }

                                        <!-- Next -->
                                        <li class="page-item @(page == totalPages ? "disabled" : "")">
                                            <a class="page-link"
                                               asp-action="BillingHistory"
                                               asp-route-page="@(page + 1)">
                                                <span class="fas fa-angle-right"></span>
                                            </a>
                                        </li>
                                    </ul>
                                    <p class="mt10 mb-0 pagination_page_count text-center">
                                        Page @(page) of @totalPages
                                    </p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>


