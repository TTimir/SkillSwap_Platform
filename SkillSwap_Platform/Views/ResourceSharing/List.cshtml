@section DynamicScript {
    <script>
        $(function(){
          if (!window.isGrowthUser) return;

          function makeOpts(title){
            return {
              dom: 'Bfrtip',
              buttons: [
                'copy',
                { extend:'excelHtml5', title: title },
                { extend:'pdfHtml5',
                  title: title,
                  orientation: 'landscape',
                  pageSize: 'A4'
                },
                'print'
              ],
              pageLength: 10,
              order: [[2,'desc']],  // sort by date
              exportOptions: {
                // pull from data-export if present
                format: {
                  body: function(data, row, col, node){
                    return $(node).attr('data-export') || data;
                  }
                }
              }
            };
          }

          // Received
          $('#receivedTable').DataTable(makeOpts('Received_Resources'));

          // Shared
          $('#sharedTable').DataTable(makeOpts('Shared_Resources'));
        });
    </script>
}
