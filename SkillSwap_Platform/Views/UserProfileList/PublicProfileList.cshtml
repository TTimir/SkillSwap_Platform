<style>
    .pub-profile-avatar {
        width: 100px;
        height: 100px;
        border-radius: 50%; /* make them circles */
        object-fit: cover; /* crop to fill without distortion */
        display: inline-block; /* or block/inline-block as needed */
    }

    /* 1) equal-height row = flex container */
    .row.equal-height {
        display: flex;
        flex-wrap: wrap;
    }
        /* 2) each col becomes flex column */
        .row.equal-height > [class*="col-"] {
            display: flex;
            flex-direction: column;
        }

    /* 3) card fills its col */
    .offer-card {
        display: flex;
        flex-direction: column;
        flex: 1 1 auto;
    }

        /* 4) content area grows, footer pushed down */
        .offer-card .list-content {
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        .offer-card .fl-meta {
            margin-top: auto;
        }

        /* 5) optional: clamp title to 2 lines */
        .offer-card h5.title {
            min-height: 2.6em;
            overflow: hidden;
            text-overflow: ellipsis;
            display: -webkit-box;
            -webkit-line-clamp: 2;
