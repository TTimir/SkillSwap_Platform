@model int
@if (Model > 0)
{
    <!--
      position‑absolute + translate‑middle puts it top‑right of the parent <a>.
      You can tweak the .p‑1 (padding) or .bg-success to your taste.
    -->
    <span class="position-absolute top-0 start-100
                 p-1 bg-success border border-light rounded-circle" style="transform:translate(-1850%,90%) !important;"></span>
}
